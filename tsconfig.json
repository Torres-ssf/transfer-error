{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "ESNext.disposable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "types": ["vitest/globals", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
